[flake8]
max-line-length = 127
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    F401,  # imported but unused (sometimes needed for __init__.py)
    E402   # module level import not at top of file (sometimes needed)

exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

per-file-ignores =
    __init__.py:F401
    */migrations/*:E501,F401
    tests/*:E501

# Enable specific checks
select = E,W,F,C

# Show source code for each error
show-source = True

# Show pep8 violation statistics
statistics = True

# Count the number of occurrences of each error/warning code
count = True
